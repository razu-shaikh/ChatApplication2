<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_profile"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorAccent"
    tools:context="com.example.rajus.chatapplication.ProfileActivity">

    <ImageView
        android:id="@+id/user_profile_visit_image"
        android:layout_width="match_parent"
        android:layout_height="200dp"
        android:src="@drawable/default_profile"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="26dp"
        android:id="@+id/user_visit_name"
        android:layout_below="@+id/user_profile_visit_image"
        android:layout_alignParentStart="true"
        android:gravity="center"
        android:text="User Name"
        android:textColor="#fffcfc"
        android:textStyle="bold"
        android:textSize="24sp"
        android:layout_margin="5dp"/>

    <TextView
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:layout_marginTop="27dp"
        android:id="@+id/user_visit_status"
        android:gravity="center"
        android:text="User Status"
        android:textColor="#fffcfc"
        android:textSize="18sp"
        android:layout_marginLeft="3dp"
        android:layout_marginRight="3dp"
        android:layout_alignTop="@+id/user_visit_name"
        android:layout_alignEnd="@+id/user_visit_name"
        />

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="11dp"
        android:id="@+id/decline_friend_request"
        android:text="decline friend request"
        android:layout_below="@+id/send_friend_request"
        android:layout_centerHorizontal="true"
        android:textColor="#faf7f7"
        android:background="#f90f0f"
        android:textSize="18sp"/>

    <Button
        android:layout_width="180dp"
        android:layout_height="wrap_content"
        android:layout_marginTop="99dp"
        android:id="@+id/send_friend_request"
        android:text="send friend request"
        android:textColor="#faf7f7"
        android:background="#f90f0f"
        android:textSize="18sp"
        android:layout_below="@+id/user_visit_status"
        android:layout_alignStart="@+id/decline_friend_request" />


</RelativeLayout>
